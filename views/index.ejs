<!DOCTYPE html>
<html>

<head>
    <title>Localização T.I</title>
    <link rel="icon" type="image/x-icon" href="logo-igc-iguacu.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/styles/style.css" rel="stylesheet">
</head>

<body>

    <div class="principal" id="principal">
        <% if (isAdmin) { %>
            <button id="botaocriar" onclick="abrirModal()">
              <span id="botaocriar-content">Adicionar Colaborador</span>
            </button>
            <% } %>
        <h1>Localização T.I</h1>
    </div>
    <div class="atributos" id="atributos">
        <h2>Colaborador</h2>
        <h2>Localização</h2>
        <h2>Status</h2>
    </div>
    <div id="colaboradores-container">
        <% colaboradores.forEach(colaborador=> { %>
            <div class="colaborador" id="colaborador-<%= colaborador.id %>"
                oncontextmenu="showContextMenu(event, '<%= colaborador.id %>')">
                <img src="<%= colaborador.imagem %>" alt="Imagem de <%= colaborador.nome %>"
                    onclick="editarLocalizacao(`<%= colaborador.id %>`)">
                <h1>
                    <%= colaborador.nome %>
                </h1>
                <h2>
                    <%= colaborador.localizacao %>
                </h2>
                <h3 class="status <%= colaborador.status %>">
                    <%= colaborador.status %>
                </h3>
            </div>
            <% }); %>
    </div>

    <div id="context-menu" class="context-menu">
        <ul>
          <% if (isAdmin) { %>
          <li id="delete-option">Deletar</li>
          <li id="alterar-option">Alterar Imagem</li>
          <% } else { %>
          <li id="view-option">Ver Detalhes</li>
          <% } %>
        </ul>
      </div>

    <div id="modal-colaborador" class="popup">
        <div class="form">
            <span class="close-btn" onclick="fecharModal()">&times;</span>
            <h3 class="title">Adicionar Colaborador</h3>
            <form id="form-colaborador" enctype="multipart/form-data">
                <input type="text" id="nome" class="input_field" placeholder="Nome do colaborador" required>
                <input type="text" id="localizacao" class="input_field" placeholder="Localização do colaborador"
                    required>
                <input type="file" id="imagem" class="input_field" accept="image/*" required>
                <button type="button" class="submit" onclick="adicionarColaborador()">Adicionar Colaborador</button>
            </form>
        </div>
    </div>

    <div id="modal-alterar-imagem" class="popup">
        <div class="form">
            <span class="close-btn" onclick="fecharModalAlterarImagem()">&times;</span>
            <h3 class="title">Alterar Imagem do Colaborador</h3>
            <form id="form-alterar-imagem" enctype="multipart/form-data">
                <input type="file" id="nova-imagem" class="input_field" accept="image/*" required>
                <button type="button" class="submit" onclick="alterarImagemColaborador()">Alterar Imagem</button>
            </form>
        </div>
    </div>
    

    <script src="/scripts/client.js"></script>

</body>

</html>